#!/bin/bash -e

# Enable jemalloc for reduced memory
if [ -z "${LD_PRELOAD+x}" ] && [ -f /usr/lib/*/libjemalloc.so.2 ]; then
  export LD_PRELOAD="$(echo /usr/lib/*/libjemalloc.so.2)"
fi

# Copy config templates if needed (FAST - only if missing)
[ ! -f "config/application.yml" ] && cp config/application.yml.example config/application.yml
[ ! -f "config/database.yml" ] && cp config/database.yml.example config/database.yml

# Run migrations only when starting server (FAST - background process)
if [ "${1}" == "./bin/rails" ] && [ "${2}" == "server" ]; then
  ./bin/rails db:prepare
fi

# Start application immediately
exec "${@}"
