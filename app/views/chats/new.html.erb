<div class="min-h-screen bg-background py-8 px-4">
  <div class="max-w-lg mx-auto">
    <div class="mb-6">
      <%= link_to chats_path, class: "inline-flex items-center text-primary hover:text-primary-light" do %>
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Назад к чатам
      <% end %>
    </div>
    
    <div class="card">
      <h1 class="text-2xl font-bold text-text-primary mb-6">Новый диалог</h1>
      
      <%= form_with model: @chat, url: chats_path, method: :post do |f| %>
        <%= render 'shared/form_error_message', model: @chat %>
        
        <div class="form-group">
          <%= f.label :title, "Название диалога", class: "form-label" %>
          <%= f.text_field :title, 
            placeholder: "Например: Помощь с кодом, Общий разговор...",
            class: "form-input",
            autofocus: true %>
          <p class="form-helper">Придумайте название для вашего диалога</p>
        </div>
        
        <div class="flex items-center space-x-3">
          <%= f.submit "Создать диалог", class: "btn-primary" %>
          <%= link_to "Отмена", chats_path, class: "btn-secondary" %>
        </div>
      <% end %>
    </div>
    
    <!-- Info Card -->
    <div class="mt-6 p-4 bg-primary/5 border border-primary/20 rounded-lg">
      <div class="flex items-start space-x-3">
        <svg class="w-5 h-5 text-primary mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        <div class="text-sm text-text-secondary">
          <p class="font-medium text-text-primary mb-1">Возможности AI-ассистента:</p>
          <ul class="list-disc list-inside space-y-1">
            <li>Ответы на любые вопросы</li>
            <li>Помощь с задачами и проектами</li>
            <li>Поиск актуальной информации</li>
            <li>Анализ документов и файлов</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>