<div class="min-h-screen bg-background py-8 px-4">
  <div class="max-w-lg mx-auto">
    <div class="mb-6">
      <%= link_to chat_path(@chat), class: "inline-flex items-center text-primary hover:text-primary-light" do %>
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Назад к диалогу
      <% end %>
    </div>
    
    <div class="card">
      <h1 class="text-2xl font-bold text-text-primary mb-6">Редактировать диалог</h1>
      
      <%= form_with model: @chat, url: chat_path(@chat), method: :patch do |f| %>
        <%= render 'shared/form_error_message', model: @chat %>
        
        <div class="form-group">
          <%= f.label :title, "Название диалога", class: "form-label" %>
          <%= f.text_field :title, 
            class: "form-input",
            autofocus: true %>
        </div>
        
        <div class="flex items-center space-x-3">
          <%= f.submit "Сохранить", class: "btn-primary" %>
          <%= link_to "Отмена", chat_path(@chat), class: "btn-secondary" %>
        </div>
      <% end %>
      
      <!-- Danger Zone -->
      <div class="mt-8 pt-8 border-t border-border">
        <h2 class="text-lg font-semibold text-text-primary mb-4">Опасная зона</h2>
        
        <div class="p-4 bg-red-50 dark:bg-red-900/10 border border-red-200 dark:border-red-800 rounded-lg">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <h3 class="font-medium text-red-900 dark:text-red-300">Удалить диалог</h3>
              <p class="text-sm text-red-700 dark:text-red-400 mt-1">
                Это действие нельзя отменить. Все сообщения будут удалены навсегда.
              </p>
            </div>
            
            <%= button_to "Удалить", 
              chat_path(@chat), 
              method: :delete,
              data: { turbo_confirm: "Вы уверены? Это действие нельзя отменить." },
              class: "ml-4 px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>